@page
@model Catholirism.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Login";
}

<style>
    .catholic-page {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
        padding: 2rem 0;
        font-family: 'Open Sans', sans-serif;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .catholic-container {
        max-width: 500px;
        width: 100%;
        margin: 0 auto;
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        animation: slideInUp 0.8s ease-out;
    }

    .page-header {
        background: linear-gradient(135deg, #6f42c1 0%, #8e44ad 100%);
        color: white;
        padding: 3rem 2rem;
        text-align: center;
        position: relative;
    }

    .page-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><path d="M50 15L55 35L75 35L60 50L65 70L50 55L35 70L40 50L25 35L45 35Z" fill="rgba(255,255,255,0.08)"/></svg>') repeat;
        background-size: 60px 60px;
    }

    .page-header h1 {
        margin: 0;
        font-size: 2.8rem;
        font-weight: 700;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        position: relative;
        z-index: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
    }

    .page-header h1::before {
        content: '🙏';
        font-size: 2.5rem;
        opacity: 0.9;
    }

    .page-header::after {
        content: '⛪';
        position: absolute;
        top: 1rem;
        right: 2rem;
        font-size: 2.5rem;
        opacity: 0.4;
        z-index: 1;
    }

    .welcome-message {
        background: linear-gradient(135deg, #fff3e0, #ffe0b2);
        border-radius: 12px;
        padding: 1.8rem;
        margin: 2.5rem 2.5rem 0;
        border-left: 4px solid #ff9800;
        position: relative;
        text-align: center;
    }

    .welcome-message::before {
        content: '✨';
        position: absolute;
        top: 1rem;
        right: 1.5rem;
        font-size: 1.8rem;
        opacity: 0.7;
    }

    .welcome-message h4 {
        color: #e65100;
        font-weight: 600;
        margin-bottom: 0.8rem;
        font-size: 1.3rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .welcome-message h4::before {
        content: '🕊️';
        font-size: 1.2rem;
    }

    .welcome-message p {
        color: #bf360c;
        margin: 0;
        font-size: 1rem;
        line-height: 1.6;
        font-weight: 500;
    }

    .form-container {
        padding: 2.5rem;
    }

    .form-group {
        margin-bottom: 2.2rem;
        position: relative;
    }

    .form-group label {
        display: block;
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.8rem;
        font-size: 1.2rem;
        position: relative;
        padding-left: 2.5rem;
    }

    .form-group label[for*="Username"]::before {
        content: '👤';
        position: absolute;
        left: 0;
        top: 0;
        font-size: 1.4rem;
    }

    .form-group label[for*="Password"]::before {
        content: '🔐';
        position: absolute;
        left: 0;
        top: 0;
        font-size: 1.4rem;
    }

    .form-control {
        width: 100%;
        padding: 1.3rem 1.6rem;
        border: 2px solid #e9ecef;
        border-radius: 12px;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        background: #f8f9fa;
        box-sizing: border-box;
        font-family: 'Open Sans', sans-serif;
    }

    .form-control:focus {
        outline: none;
        border-color: #8e44ad;
        background: white;
        box-shadow: 0 0 0 4px rgba(142, 68, 173, 0.1);
        transform: translateY(-2px);
    }

    .form-control:hover {
        border-color: #ced4da;
        background: white;
    }

    .text-danger {
        color: #dc3545;
        font-size: 0.95rem;
        margin-top: 0.6rem;
        font-weight: 500;
        display: block;
        padding-left: 0.5rem;
        background: #fff5f5;
        padding: 0.5rem;
        border-radius: 6px;
        border-left: 3px solid #dc3545;
    }

    .submit-btn {
        background: linear-gradient(135deg, #8e44ad, #9b59b6);
        color: white;
        padding: 1.4rem 3.5rem;
        border: none;
        border-radius: 25px;
        font-size: 1.3rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        box-shadow: 0 8px 25px rgba(142, 68, 173, 0.3);
        position: relative;
        overflow: hidden;
        margin-top: 2rem;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
    }

    .submit-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s;
    }

    .submit-btn:hover::before {
        left: 100%;
    }

    .submit-btn:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 35px rgba(142, 68, 173, 0.4);
        background: linear-gradient(135deg, #9b59b6, #8e44ad);
    }

    .submit-btn:active {
        transform: translateY(-2px);
    }

    .submit-btn::after {
        content: '🙏✨';
        font-size: 1.2rem;
    }

    .login-footer {
        background: linear-gradient(135deg, #e8f5e8, #f0f8f0);
        border-radius: 10px;
        padding: 1.5rem;
        margin-top: 1.5rem;
        border-left: 4px solid #4caf50;
        text-align: center;
    }

    .login-footer p {
        color: #2e7d32;
        margin: 0;
        font-weight: 500;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .login-footer p::before {
        content: '🛡️';
        font-size: 1.2rem;
    }

    
    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(30px) scale(0.95);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    
    .catholic-container {
        animation: slideInUp 0.8s ease-out, float 6s ease-in-out infinite 1s;
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(-10px);
        }
    }

    
    @@media (max-width: 768px) {
        .catholic-page {
            padding: 1rem;
        }
        
        .catholic-container {
            margin: 0;
            border-radius: 10px;
        }
        
        .page-header {
            padding: 2.5rem 1.5rem;
        }
        
        .page-header h1 {
            font-size: 2.2rem;
            flex-direction: column;
            gap: 0.5rem;
        }
        
        .welcome-message {
            margin: 2rem 1.5rem 0;
        }
        
        .form-container {
            padding: 1.8rem;
        }
        
        .form-group label {
            font-size: 1.1rem;
            padding-left: 2rem;
        }
        
        .form-control {
            padding: 1.1rem 1.3rem;
            font-size: 1rem;
        }
        
        .submit-btn {
            padding: 1.2rem 2.5rem;
            font-size: 1.1rem;
        }

        .page-header::after {
            display: none;
        }

        .welcome-message::before {
            display: none;
        }
    }

    .form-control.is-invalid {
        border-color: #dc3545;
        background-color: #fff5f5;
    }

    .form-control.is-valid {
        border-color: #28a745;
        background-color: #f0fff4;
    }

    .form-control.is-valid:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 4px rgba(40, 167, 69, 0.1);
    }

    .page-header {
        overflow: hidden;
    }

    .page-header::after {
        animation: float 4s ease-in-out infinite;
    }
</style>

<div class="catholic-page">
    <div class="catholic-container">
        <div class="page-header">
            <h1>Acesso Sagrado</h1>
        </div>

        <div class="welcome-message">
            <h4>Bem-vindo ao Portal</h4>
            <p>Entre em sua conta para acessar os roteiros de peregrinação e gerenciar os destinos sagrados da sua jornada espiritual.</p>
        </div>

        <div class="form-container">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="Input.Username" class="control-label">Nome de Usuário</label>
                    <input asp-for="Input.Username" class="form-control" placeholder="Digite seu nome de usuário" />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Input.Password" class="control-label">Senha</label>
                    <input asp-for="Input.Password" class="form-control" placeholder="Digite sua senha" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                
                <button type="submit" class="submit-btn">Entrar no Portal</button>
            </form>

            <div class="login-footer">
                <p>Acesso seguro protegido pela providência divina</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model Catholirism.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Sair";
}

<div class="catholic-page">
    <div class="catholic-container">
        <div class="page-header">
            <h2>Sair da Conta</h2>
        </div>
        <div class="form-container">
            <div class="notes-info">
                <h4>Você foi deslogado</h4>
                <p>Sua sessão foi encerrada com sucesso. Clique abaixo para retornar à página inicial ou fazer login novamente.</p>
            </div>
            <div class="section-card">
                <div class="section-content">
                    <a class="submit-btn" asp-area="" asp-page="/Index">Voltar para a Página Inicial</a>
                    <a class="submit-btn" asp-area="" asp-page="/Account/Login">Fazer Login Novamente</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .catholic-page {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
        padding: 2rem 0;
        font-family: 'Open Sans', sans-serif;
    }

    .catholic-container {
        max-width: 1000px;
        margin: 0 auto;
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .page-header {
        background: linear-gradient(135deg, #6f42c1 0%, #8e44ad 100%);
        color: white;
        padding: 2.5rem 2rem;
        text-align: center;
        position: relative;
    }

    .page-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><path d="M50 15L55 35L75 35L60 50L65 70L50 55L35 70L40 50L25 35L45 35Z" fill="rgba(255,255,255,0.08)"/></svg>') repeat;
        background-size: 60px 60px;
    }

    .page-header h2 {
        margin: 0;
        font-size: 2.5rem;
        font-weight: 700;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        position: relative;
        z-index: 1;
    }

    .form-container {
        padding: 2.5rem;
    }

    .notes-info {
        background: linear-gradient(135deg, #fff3e0, #ffe0b2);
        border-radius: 12px;
        padding: 1.8rem;
        margin-bottom: 2.5rem;
        border-left: 4px solid #ff9800;
        position: relative;
    }

    .notes-info h4 {
        color: #e65100;
        font-weight: 600;
        margin-bottom: 1rem;
        font-size: 1.3rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .notes-info p {
        color: #bf360c;
        margin: 0;
        font-size: 1rem;
        line-height: 1.6;
        font-weight: 500;
    }

    .section-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        margin-bottom: 2.5rem;
        overflow: hidden;
        border: 1px solid #e9ecef;
    }

    .section-content {
        padding: 2rem;
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .submit-btn {
        background: linear-gradient(135deg, #8e44ad, #9b59b6);
        color: white;
        padding: 1rem 2.5rem;
        border: none;
        border-radius: 25px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 6px 20px rgba(142, 68, 173, 0.3);
        position: relative;
        overflow: hidden;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
    }

    .submit-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s;
    }

    .submit-btn:hover::before {
        left: 100%;
    }

    .submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(142, 68, 173, 0.4);
        background: linear-gradient(135deg, #9b59b6, #8e44ad);
    }

    @@media (max-width: 768px) {
        .catholic-container {
            margin: 1rem;
            border-radius: 10px;
        }

        .page-header {
            padding: 2rem 1.5rem;
        }

        .page-header h2 {
            font-size: 2rem;
        }

        .form-container {
            padding: 1.8rem;
        }

        .section-content {
            padding: 1.5rem;
            flex-direction: column;
            align-items: center;
        }

        .submit-btn {
            padding: 0.9rem 2rem;
            font-size: 1rem;
            width: 100%;
            text-align: center;
        }
    }
</style>
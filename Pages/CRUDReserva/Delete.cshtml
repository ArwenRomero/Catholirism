@page
@model Catholirism.Pages.CRUDReserva.DeleteModel

@{
    ViewData["Title"] = "Cancelar Reserva";
}

<style>
    .catholic-page {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
        padding: 2rem 0;
        font-family: 'Open Sans', sans-serif;
    }

    .catholic-container {
        max-width: 800px;
        margin: 0 auto;
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .page-header {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white;
        padding: 2.5rem 2rem;
        text-align: center;
        position: relative;
    }

    .page-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><path d="M50 15L55 35L75 35L60 50L65 70L50 55L35 70L40 50L25 35L45 35Z" fill="rgba(255,255,255,0.08)"/></svg>') repeat;
        background-size: 60px 60px;
    }

    .page-header h1 {
        margin: 0;
        font-size: 2.5rem;
        font-weight: 700;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        position: relative;
        z-index: 1;
    }

    .page-header::after {
        content: '⚠️';
        position: absolute;
        top: 1rem;
        right: 2rem;
        font-size: 2.5rem;
        opacity: 0.4;
        z-index: 1;
    }

    .form-container {
        padding: 2.5rem;
    }

    .warning-info {
        background: linear-gradient(135deg, #fff3cd, #ffeaa7);
        border-radius: 12px;
        padding: 1.8rem;
        margin-bottom: 2.5rem;
        border-left: 4px solid #ffc107;
        position: relative;
    }

    .warning-info::before {
        content: '🚨';
        position: absolute;
        top: 1rem;
        right: 1.5rem;
        font-size: 1.8rem;
        opacity: 0.7;
    }

    .warning-info h3 {
        color: #856404;
        font-weight: 600;
        margin-bottom: 1rem;
        font-size: 1.4rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .warning-info h3::before {
        content: '❓';
        font-size: 1.3rem;
    }

    .warning-info p {
        color: #533f03;
        margin: 0;
        font-size: 1rem;
        line-height: 1.6;
        font-weight: 500;
    }

    .reservation-details {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        border-radius: 12px;
        padding: 2rem;
        margin-bottom: 2.5rem;
        border-left: 4px solid #6f42c1;
        position: relative;
    }

    .reservation-details::before {
        content: '📋';
        position: absolute;
        top: 1rem;
        right: 1.5rem;
        font-size: 1.8rem;
        opacity: 0.7;
    }

    .reservation-details h4 {
        color: #6f42c1;
        font-weight: 600;
        margin-bottom: 1.5rem;
        font-size: 1.4rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        border-bottom: 2px solid #e9ecef;
        padding-bottom: 0.8rem;
    }

    .reservation-details h4::before {
        content: '📿';
        font-size: 1.3rem;
    }

    .details-grid {
        display: grid;
        gap: 1.5rem;
    }

    .detail-item {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        padding: 1.2rem;
        background: white;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        border-left: 3px solid #dee2e6;
        transition: all 0.3s ease;
    }

    .detail-item:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        border-left-color: #6f42c1;
    }

    .detail-icon {
        font-size: 1.5rem;
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #6f42c1, #8e44ad);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        box-shadow: 0 3px 10px rgba(111, 66, 193, 0.3);
    }

    .detail-content {
        flex: 1;
    }

    .detail-label {
        font-weight: 600;
        color: #495057;
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.3rem;
        opacity: 0.8;
    }

    .detail-value {
        font-size: 1.2rem;
        color: #212529;
        font-weight: 500;
        line-height: 1.4;
    }

    .action-buttons {
        display: flex;
        gap: 1.5rem;
        margin-top: 2.5rem;
        flex-wrap: wrap;
    }

    .delete-btn {
        background: linear-gradient(135deg, #dc3545, #c82333);
        color: white;
        padding: 1.4rem 3rem;
        border: none;
        border-radius: 25px;
        font-size: 1.2rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        box-shadow: 0 8px 25px rgba(220, 53, 69, 0.3);
        position: relative;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.8rem;
        flex: 1;
        min-width: 200px;
    }

    .delete-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s;
    }

    .delete-btn:hover::before {
        left: 100%;
    }

    .delete-btn:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 35px rgba(220, 53, 69, 0.4);
        background: linear-gradient(135deg, #c82333, #dc3545);
    }

    .delete-btn:active {
        transform: translateY(-2px);
    }

    .delete-btn::after {
        content: '🗑️';
        font-size: 1.2rem;
    }

    .cancel-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.8rem;
        color: #6f42c1;
        text-decoration: none;
        font-weight: 600;
        padding: 1.4rem 3rem;
        border: 2px solid #6f42c1;
        border-radius: 25px;
        transition: all 0.3s ease;
        background: white;
        font-size: 1.2rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        flex: 1;
        min-width: 200px;
        justify-content: center;
        box-shadow: 0 4px 15px rgba(111, 66, 193, 0.1);
    }

    .cancel-btn::before {
        content: '🔙';
        font-size: 1.2rem;
    }

    .cancel-btn:hover {
        background: #6f42c1;
        color: white;
        transform: translateY(-4px);
        box-shadow: 0 8px 25px rgba(111, 66, 193, 0.3);
        text-decoration: none;
    }

    .cancel-btn:active {
        transform: translateY(-2px);
    }

    
    .catholic-container {
        animation: slideInUp 0.8s ease-out;
    }

    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    
    .warning-info {
        animation: gentlePulse 2s ease-in-out infinite;
    }

    @@keyframes gentlePulse {
        0%, 100% {
            box-shadow: 0 4px 15px rgba(255, 193, 7, 0.2);
        }
        50% {
            box-shadow: 0 6px 20px rgba(255, 193, 7, 0.3);
        }
    }

    
    @@media (max-width: 768px) {
        .catholic-container {
            margin: 1rem;
            border-radius: 10px;
        }
        
        .page-header {
            padding: 2rem 1.5rem;
        }
        
        .page-header h1 {
            font-size: 2rem;
        }
        
        .form-container {
            padding: 1.8rem;
        }

        .action-buttons {
            flex-direction: column;
            gap: 1rem;
        }

        .delete-btn,
        .cancel-btn {
            min-width: auto;
            width: 100%;
        }
        
        .delete-btn {
            padding: 1.2rem 2rem;
            font-size: 1.1rem;
        }

        .cancel-btn {
            padding: 1.2rem 2rem;
            font-size: 1.1rem;
        }

        .page-header::after {
            display: none;
        }

        .warning-info::before,
        .reservation-details::before {
            display: none;
        }

        .warning-info,
        .reservation-details {
            padding: 1.5rem;
        }

        .detail-item {
            padding: 1rem;
        }

        .detail-icon {
            width: 35px;
            height: 35px;
            font-size: 1.3rem;
        }
    }

    
    .delete-btn:focus {
        animation: confirmationShake 0.5s ease-in-out;
    }

    @@keyframes confirmationShake {
        0%, 100% { transform: translateX(0); }
        25% { transform: translateX(-5px); }
        75% { transform: translateX(5px); }
    }
</style>

<div class="catholic-page">
    <div class="catholic-container">
        <div class="page-header">
            <h1>Cancelar Reserva</h1>
        </div>

        <div class="form-container">
            <div class="warning-info">
                <h3>Confirmar Cancelamento</h3>
                <p>Tem certeza de que deseja cancelar esta reserva de peregrinação? Esta ação não pode ser desfeita e o cliente perderá sua vaga no pacote selecionado.</p>
            </div>

            <div class="reservation-details">
                <h4>Detalhes da Reserva</h4>
                <div class="details-grid">
                    <div class="detail-item">
                        <div class="detail-icon">👤</div>
                        <div class="detail-content">
                            <div class="detail-label">@Html.DisplayNameFor(model => model.Reserva.Cliente)</div>
                            <div class="detail-value">@Html.DisplayFor(model => model.Reserva.Cliente.ClienteNome)</div>
                        </div>
                    </div>

                    <div class="detail-item">
                        <div class="detail-icon">🎒</div>
                        <div class="detail-content">
                            <div class="detail-label">@Html.DisplayNameFor(model => model.Reserva.PacoteTuristico)</div>
                            <div class="detail-value">@Html.DisplayFor(model => model.Reserva.PacoteTuristico.Nome)</div>
                        </div>
                    </div>

                    <div class="detail-item">
                        <div class="detail-icon">📅</div>
                        <div class="detail-content">
                            <div class="detail-label">@Html.DisplayNameFor(model => model.Reserva.DataReserva)</div>
                            <div class="detail-value">@Html.DisplayFor(model => model.Reserva.DataReserva)</div>
                        </div>
                    </div>
                </div>
            </div>

            <form method="post">
                <input type="hidden" asp-for="Reserva.Id" />
                <div class="action-buttons">
                    <button type="submit" class="delete-btn" onclick="return confirmarCancelamento()">Confirmar Cancelamento</button>
                    <a asp-page="./Index" class="cancel-btn">Manter Reserva</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function confirmarCancelamento() {
        return confirm('⚠️ ATENÇÃO: Você está prestes a cancelar esta reserva de peregrinação.\n\n' +
                      'Esta ação é irreversível e o cliente perderá sua vaga no pacote.\n\n' +
                      'Deseja realmente continuar com o cancelamento?');
    }

    // Adicionar efeito visual ao carregar a página
    document.addEventListener('DOMContentLoaded', function() {
        const detailItems = document.querySelectorAll('.detail-item');
        detailItems.forEach((item, index) => {
            setTimeout(() => {
                item.style.animation = 'slideInUp 0.5s ease-out';
            }, index * 100);
        });
    });

    // Adicionar feedback visual ao botão de deletar
    document.querySelector('.delete-btn').addEventListener('mouseenter', function() {
        this.style.animation = 'gentlePulse 1s ease-in-out infinite';
    });

    document.querySelector('.delete-btn').addEventListener('mouseleave', function() {
        this.style.animation = 'none';
    });
</script>

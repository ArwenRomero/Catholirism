@page
@model Catholirism.Pages.CRUDReserva.EditModel

@{
    ViewData["Title"] = "Editar Reserva";
}

<style>
    .catholic-page {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
        padding: 2rem 0;
        font-family: 'Open Sans', sans-serif;
    }

    .catholic-container {
        max-width: 900px;
        margin: 0 auto;
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .page-header {
        background: linear-gradient(135deg, #6f42c1 0%, #8e44ad 100%);
        color: white;
        padding: 2.5rem 2rem;
        text-align: center;
        position: relative;
    }

    .page-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><path d="M50 15L55 35L75 35L60 50L65 70L50 55L35 70L40 50L25 35L45 35Z" fill="rgba(255,255,255,0.08)"/></svg>') repeat;
        background-size: 60px 60px;
    }

    .page-header h1 {
        margin: 0;
        font-size: 2.5rem;
        font-weight: 700;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        position: relative;
        z-index: 1;
    }

    .page-header::after {
        content: '✏️';
        position: absolute;
        top: 1rem;
        right: 2rem;
        font-size: 2.5rem;
        opacity: 0.4;
        z-index: 1;
    }

    .form-container {
        padding: 2.5rem;
    }

    .reservation-info {
        background: linear-gradient(135deg, #fff3e0, #ffe0b2);
        border-radius: 12px;
        padding: 1.8rem;
        margin-bottom: 2.5rem;
        border-left: 4px solid #ff9800;
        position: relative;
    }

    .reservation-info::before {
        content: '🎫';
        position: absolute;
        top: 1rem;
        right: 1.5rem;
        font-size: 1.8rem;
        opacity: 0.7;
    }

    .reservation-info h4 {
        color: #e65100;
        font-weight: 600;
        margin-bottom: 1rem;
        font-size: 1.3rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .reservation-info h4::before {
        content: '✨';
        font-size: 1.2rem;
    }

    .reservation-info p {
        color: #bf360c;
        margin: 0;
        font-size: 1rem;
        line-height: 1.6;
        font-weight: 500;
    }

    .form-group {
        margin-bottom: 2.2rem;
        position: relative;
    }

    .form-group label {
        display: block;
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.8rem;
        font-size: 1.2rem;
        position: relative;
        padding-left: 2.5rem;
    }

    .form-group label[for*="ClienteId"]::before {
        content: '👤';
        position: absolute;
        left: 0;
        top: 0;
        font-size: 1.4rem;
        background: linear-gradient(135deg, #4CAF50, #45a049);
        color: white;
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 3px 10px rgba(76, 175, 80, 0.3);
    }

    .form-group label[for*="PacoteId"]::before {
        content: '⛪';
        position: absolute;
        left: 0;
        top: 0;
        font-size: 1.4rem;
        background: linear-gradient(135deg, #FF9800, #f57c00);
        color: white;
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 3px 10px rgba(255, 152, 0, 0.3);
    }

    .form-group label[for*="DataReserva"]::before {
        content: '📅';
        position: absolute;
        left: 0;
        top: 0;
        font-size: 1.4rem;
        background: linear-gradient(135deg, #2196F3, #1976d2);
        color: white;
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 3px 10px rgba(33, 150, 243, 0.3);
    }

    .required-asterisk {
        color: #dc3545;
        font-size: 1.2rem;
        font-weight: bold;
        margin-right: 0.3rem;
        text-shadow: 1px 1px 2px rgba(220, 53, 69, 0.3);
    }

    .form-control {
        width: 100%;
        padding: 1.3rem 1.6rem;
        border: 2px solid #e9ecef;
        border-radius: 12px;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        background: #f8f9fa;
        box-sizing: border-box;
        font-family: 'Open Sans', sans-serif;
    }

    .form-control:focus {
        outline: none;
        border-color: #8e44ad;
        background: white;
        box-shadow: 0 0 0 4px rgba(142, 68, 173, 0.1);
        transform: translateY(-2px);
    }

    .form-control:hover {
        border-color: #ced4da;
        background: white;
    }

    .form-control[readonly] {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        color: #6c757d;
        cursor: not-allowed;
        border-color: #dee2e6;
    }

    .text-danger {
        color: #dc3545;
        font-size: 0.95rem;
        margin-top: 0.6rem;
        font-weight: 500;
        display: block;
        padding-left: 0.5rem;
        background: #fff5f5;
        padding: 0.5rem;
        border-radius: 6px;
        border-left: 3px solid #dc3545;
    }

    .validation-summary {
        background: linear-gradient(135deg, #fff5f5, #ffe6e6);
        border: 1px solid #dc3545;
        border-radius: 10px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        color: #721c24;
        position: relative;
    }

    .validation-summary::before {
        content: '⚠️';
        position: absolute;
        top: 1rem;
        left: 1rem;
        font-size: 1.3rem;
    }

    .validation-summary ul {
        margin: 0;
        padding-left: 3rem;
        list-style: none;
    }

    .validation-summary li {
        margin-bottom: 0.5rem;
        position: relative;
    }

    .validation-summary li::before {
        content: '•';
        color: #dc3545;
        font-weight: bold;
        position: absolute;
        left: -1rem;
    }

    .submit-btn {
        background: linear-gradient(135deg, #28a745, #20c997);
        color: white;
        padding: 1.4rem 3.5rem;
        border: none;
        border-radius: 25px;
        font-size: 1.3rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        box-shadow: 0 8px 25px rgba(40, 167, 69, 0.3);
        position: relative;
        overflow: hidden;
        margin-top: 2rem;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
    }

    .submit-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s;
    }

    .submit-btn:hover::before {
        left: 100%;
    }

    .submit-btn:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 35px rgba(40, 167, 69, 0.4);
        background: linear-gradient(135deg, #20c997, #28a745);
    }

    .submit-btn:active {
        transform: translateY(-2px);
    }

    .submit-btn::after {
        content: '💾';
        font-size: 1.2rem;
    }

    .back-btn {
        background: linear-gradient(135deg, #6c757d, #495057);
        color: white;
        padding: 1.2rem 2.5rem;
        border: none;
        border-radius: 25px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 6px 20px rgba(108, 117, 125, 0.3);
        position: relative;
        overflow: hidden;
        margin-top: 2rem;
    }

    .back-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s;
    }

    .back-btn:hover::before {
        left: 100%;
    }

    .back-btn::after {
        content: '🔙';
        font-size: 1.1rem;
    }

    .back-btn:hover {
        background: linear-gradient(135deg, #495057, #6c757d);
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(108, 117, 125, 0.4);
        text-decoration: none;
        color: white;
    }

    .form-tips {
        background: linear-gradient(135deg, #e8f5e8, #f0f8f0);
        border-radius: 10px;
        padding: 1.5rem;
        margin-top: 1.5rem;
        border-left: 4px solid #4caf50;
    }

    .form-tips h5 {
        color: #2e7d32;
        font-weight: 600;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .form-tips h5::before {
        content: '💡';
        font-size: 1.3rem;
    }

    .form-tips ul {
        margin: 0;
        padding-left: 1.5rem;
        color: #1b5e20;
    }

    .form-tips li {
        margin-bottom: 0.5rem;
        line-height: 1.5;
    }

    .sacred-decoration {
        text-align: center;
        margin: 2rem 0;
        font-size: 2rem;
        opacity: 0.3;
        color: #8e44ad;
    }

    
    .catholic-container {
        animation: slideInUp 0.8s ease-out;
    }

    .form-group {
        animation: fadeInLeft 0.6s ease-out;
        animation-fill-mode: both;
    }

    .form-group:nth-child(1) { animation-delay: 0.1s; }
    .form-group:nth-child(2) { animation-delay: 0.2s; }
    .form-group:nth-child(3) { animation-delay: 0.3s; }
    .form-group:nth-child(4) { animation-delay: 0.4s; }

    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInLeft {
        from {
            opacity: 0;
            transform: translateX(-30px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    
    @@media (max-width: 768px) {
        .catholic-container {
            margin: 1rem;
            border-radius: 10px;
        }
        
        .page-header {
            padding: 2rem 1.5rem;
        }
        
        .page-header h1 {
            font-size: 2rem;
        }
        
        .form-container {
            padding: 1.8rem;
        }
        
        .form-group label {
            font-size: 1.1rem;
            padding-left: 2rem;
        }
        
        .form-control {
            padding: 1.1rem 1.3rem;
            font-size: 1rem;
        }
        
        .submit-btn {
            padding: 1.2rem 2.5rem;
            font-size: 1.1rem;
        }

        .page-header::after {
            display: none;
        }

        .reservation-info::before {
            display: none;
        }

        .reservation-info {
            padding: 1.5rem;
        }
    }

    .form-control.is-invalid {
        border-color: #dc3545;
        background-color: #fff5f5;
    }

    .form-control.is-valid {
        border-color: #28a745;
        background-color: #f0fff4;
    }

    .form-control.is-valid:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 4px rgba(40, 167, 69, 0.1);
    }
</style>

<div class="catholic-page">
    <div class="catholic-container">
        <div class="page-header">
            <h1>Editar Reserva de Peregrinação</h1>
        </div>

        <div class="form-container">
            <div class="reservation-info">
                <h4>Atualização de Reserva</h4>
                <p>Modifique os dados da reserva de peregrinação. Certifique-se de que todas as informações estejam corretas antes de salvar as alterações.</p>
            </div>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
                <input type="hidden" asp-for="Reserva.Id" />
                
                <div class="form-group">
                    <label asp-for="Reserva.ClienteId" class="control-label">
                        <span class="required-asterisk">*</span>Nome do Cliente
                    </label>
                    <select asp-for="Reserva.ClienteId" class="form-control" asp-items="ViewBag.ClienteId">
                        <option value="">Selecione um cliente...</option>
                    </select>
                    <span asp-validation-for="Reserva.ClienteId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Reserva.PacoteId" class="control-label">
                        <span class="required-asterisk">*</span>Pacote de Peregrinação
                    </label>
                    <select asp-for="Reserva.PacoteId" class="form-control" asp-items="ViewBag.PacoteId">
                        <option value="">Selecione um pacote...</option>
                    </select>
                    <span asp-validation-for="Reserva.PacoteId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Reserva.DataReserva" class="control-label">Data do Evento</label>
                    <input asp-for="Reserva.DataReserva" class="form-control" readonly />
                    <span asp-validation-for="Reserva.DataReserva" class="text-danger"></span>
                </div>

                <div class="form-tips">
                    <h5>Orientações para Edição</h5>
                    <ul>
                        <li><strong>Cliente:</strong> Verifique se está selecionando o cliente correto</li>
                        <li><strong>Pacote:</strong> Confirme se o pacote escolhido atende às necessidades do cliente</li>
                        <li><strong>Data:</strong> A data da reserva não pode ser alterada após a criação</li>
                        <li><strong>Campos obrigatórios:</strong> Marcados com asterisco (*) vermelho</li>
                    </ul>
                </div>

                <div class="sacred-decoration">
                    ✦ ✧ ✦ ✧ ✦
                </div>

                <div class="form-group">
                    <button type="submit" class="submit-btn">Salvar Alterações</button>
                </div>
            </form>

            <div style="text-align: center; margin-top: 1.5rem;">
                <a asp-page="./Index" class="back-btn">Voltar à Lista</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model Catholirism.Pages.CRUDReserva.DetailsModel

@{
    ViewData["Title"] = "Detalhes da Reserva";
}

<style>
    .catholic-page {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
        padding: 2rem 0;
        font-family: 'Open Sans', sans-serif;
    }

    .catholic-container {
        max-width: 900px;
        margin: 0 auto;
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .page-header {
        background: linear-gradient(135deg, #6f42c1 0%, #8e44ad 100%);
        color: white;
        padding: 2.5rem 2rem;
        text-align: center;
        position: relative;
    }

    .page-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><path d="M50 15L55 35L75 35L60 50L65 70L50 55L35 70L40 50L25 35L45 35Z" fill="rgba(255,255,255,0.08)"/></svg>') repeat;
        background-size: 60px 60px;
    }

    .page-header h1 {
        margin: 0;
        font-size: 2.5rem;
        font-weight: 700;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        position: relative;
        z-index: 1;
    }

    .page-header::after {
        content: '📋';
        position: absolute;
        top: 1rem;
        right: 2rem;
        font-size: 2.5rem;
        opacity: 0.4;
        z-index: 1;
    }

    .details-container {
        padding: 2.5rem;
    }

    .reservation-info {
        background: linear-gradient(135deg, #fff3e0, #ffe0b2);
        border-radius: 12px;
        padding: 1.8rem;
        margin-bottom: 2.5rem;
        border-left: 4px solid #ff9800;
        position: relative;
    }

    .reservation-info::before {
        content: '✨';
        position: absolute;
        top: 1rem;
        right: 1.5rem;
        font-size: 1.8rem;
        opacity: 0.7;
    }

    .reservation-info h4 {
        color: #e65100;
        font-weight: 600;
        margin-bottom: 1rem;
        font-size: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .reservation-info h4::before {
        content: '🎫';
        font-size: 1.3rem;
    }

    .details-grid {
        background: linear-gradient(135deg, #f8f9fa, #ffffff);
        border-radius: 15px;
        padding: 2.5rem;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
        border: 1px solid #e9ecef;
    }

    .detail-row {
        display: flex;
        margin-bottom: 2.5rem;
        padding: 1.5rem;
        background: white;
        border-radius: 12px;
        box-shadow: 0 3px 15px rgba(0, 0, 0, 0.08);
        border-left: 4px solid #8e44ad;
        transition: all 0.3s ease;
        position: relative;
    }

    .detail-row:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
    }

    .detail-row:last-child {
        margin-bottom: 0;
    }

    .detail-label {
        flex: 0 0 200px;
        font-weight: 700;
        color: #495057;
        font-size: 1.2rem;
        display: flex;
        align-items: center;
        gap: 0.8rem;
        padding-right: 2rem;
        position: relative;
    }

    .detail-label::after {
        content: '';
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        width: 2px;
        height: 60%;
        background: linear-gradient(to bottom, #8e44ad, #6f42c1);
        border-radius: 1px;
    }

    .detail-value {
        flex: 1;
        font-size: 1.2rem;
        color: #212529;
        font-weight: 500;
        display: flex;
        align-items: center;
        padding: 0.8rem 1.5rem;
        background: linear-gradient(135deg, #f8f9fa, #ffffff);
        border-radius: 8px;
        border: 1px solid #e9ecef;
        min-height: 50px;
    }

    
    .detail-row:nth-child(1) .detail-label::before {
        content: '👤';
        font-size: 1.5rem;
        background: linear-gradient(135deg, #4CAF50, #45a049);
        color: white;
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 3px 10px rgba(76, 175, 80, 0.3);
    }

    .detail-row:nth-child(2) .detail-label::before {
        content: '⛪';
        font-size: 1.5rem;
        background: linear-gradient(135deg, #FF9800, #f57c00);
        color: white;
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 3px 10px rgba(255, 152, 0, 0.3);
    }

    .detail-row:nth-child(3) .detail-label::before {
        content: '📅';
        font-size: 1.5rem;
        background: linear-gradient(135deg, #2196F3, #1976d2);
        color: white;
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 3px 10px rgba(33, 150, 243, 0.3);
    }

    .action-buttons {
        margin-top: 3rem;
        display: flex;
        gap: 1.5rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn-catholic {
        padding: 1.2rem 2.5rem;
        border: none;
        border-radius: 25px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        position: relative;
        overflow: hidden;
    }

    .btn-catholic::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s;
    }

    .btn-catholic:hover::before {
        left: 100%;
    }

    .btn-edit {
        background: linear-gradient(135deg, #28a745, #20c997);
        color: white;
    }

    .btn-edit::after {
        content: '✏️';
        font-size: 1.1rem;
    }

    .btn-edit:hover {
        background: linear-gradient(135deg, #20c997, #28a745);
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(40, 167, 69, 0.3);
    }

    .btn-back {
        background: linear-gradient(135deg, #6c757d, #495057);
        color: white;
    }

    .btn-back::after {
        content: '🔙';
        font-size: 1.1rem;
    }

    .btn-back:hover {
        background: linear-gradient(135deg, #495057, #6c757d);
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(108, 117, 125, 0.3);
    }

    .sacred-decoration {
        text-align: center;
        margin: 2rem 0;
        font-size: 2rem;
        opacity: 0.3;
        color: #8e44ad;
    }

    
    .catholic-container {
        animation: slideInUp 0.8s ease-out;
    }

    .detail-row {
        animation: fadeInRight 0.6s ease-out;
        animation-fill-mode: both;
    }

    .detail-row:nth-child(1) { animation-delay: 0.1s; }
    .detail-row:nth-child(2) { animation-delay: 0.2s; }
    .detail-row:nth-child(3) { animation-delay: 0.3s; }

    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInRight {
        from {
            opacity: 0;
            transform: translateX(30px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    
    @@media (max-width: 768px) {
        .catholic-container {
            margin: 1rem;
            border-radius: 10px;
        }
        
        .page-header {
            padding: 2rem 1.5rem;
        }
        
        .page-header h1 {
            font-size: 2rem;
        }
        
        .details-container {
            padding: 1.8rem;
        }
        
        .detail-row {
            flex-direction: column;
            gap: 1rem;
        }
        
        .detail-label {
            flex: none;
            padding-right: 0;
            border-bottom: 2px solid #e9ecef;
            padding-bottom: 0.8rem;
        }

        .detail-label::after {
            display: none;
        }
        
        .detail-value {
            margin-top: 0.5rem;
        }
        
        .action-buttons {
            flex-direction: column;
            align-items: center;
        }
        
        .btn-catholic {
            width: 100%;
            max-width: 300px;
            justify-content: center;
        }

        .page-header::after {
            display: none;
        }

        .reservation-info::before {
            display: none;
        }

        .reservation-info {
            padding: 1.5rem;
        }
    }
</style>

<div class="catholic-page">
    <div class="catholic-container">
        <div class="page-header">
            <h1>Detalhes da Reserva</h1>
        </div>

        <div class="details-container">
            <div class="reservation-info">
                <h4>Informações da Peregrinação</h4>
            </div>

            <div class="details-grid">
                <div class="detail-row">
                    <div class="detail-label">
                        Cliente
                    </div>
                    <div class="detail-value">
                        @Html.DisplayFor(model => model.Reserva.Cliente.ClienteNome)
                    </div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">
                        Pacote Turístico
                    </div>
                    <div class="detail-value">
                        @Html.DisplayFor(model => model.Reserva.PacoteTuristico.Nome)
                    </div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">
                        Data do Evento
                    </div>
                    <div class="detail-value">
                        @Html.DisplayFor(model => model.Reserva.DataReserva)
                    </div>
                </div>
            </div>

            <div class="sacred-decoration">
                ✦ ✧ ✦ ✧ ✦
            </div>

            <div class="action-buttons">
                <a asp-page="./Edit" asp-route-id="@Model.Reserva.Id" class="btn-catholic btn-edit">
                    Editar Reserva
                </a>
                <a asp-page="./Index" class="btn-catholic btn-back">
                    Voltar à Lista
                </a>
            </div>
        </div>
    </div>
</div>
